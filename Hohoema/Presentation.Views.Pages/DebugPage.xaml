<Page
    x:Class="Hohoema.Presentation.Views.DebugPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Hohoema.Presentation.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

  <StackPanel Spacing="16">
    <Button Content="内部通知をテスト" Click="TestInAppNotification" />
    <Button Content="例外を発生させる" Click="ForceThrowException" />
    <Button Content="クラッシュレポートをテスト" Click="TestCrashReport_Click" />
  </StackPanel>
</Page>
