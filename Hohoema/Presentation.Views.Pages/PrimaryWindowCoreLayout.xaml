                            Margin="0 0 8 0">
                <SymbolIcon Symbol="Add" ToolTipService.ToolTip="{i18nExt:Localize Key=PinCurrentPage}"
                                  Opacity="0.55" />
              </Button>
              <TextBlock Text="{i18nExt:Localize Key=Pin}"
                               VerticalAlignment="Center"
