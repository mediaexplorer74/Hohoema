<MenuFlyout x:Class="Hohoema.Presentation.Views.Flyouts.FollowItemFlyout"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:local="using:Hohoema.Presentation.Views.Flyouts"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:i="using:Microsoft.Xaml.Interactivity"
            xmlns:core="using:Microsoft.Xaml.Interactions.Core"
            xmlns:mybehavior="using:Hohoema.Presentation.Views.Behaviors"
            xmlns:i18nExt="using:I18NPortable.Xaml.Extensions"
            mc:Ignorable="d">
  <MenuFlyoutItem Text="{Binding Name}"
                  IsEnabled="False" />

  <MenuFlyoutItem x:Name="AddSubscriptionButton"
                     Text="{i18nExt:Localize Key=AddToSubscription}"
                     Icon="Add"
                     Visibility="Collapsed">

  </MenuFlyoutItem>

  <MenuFlyoutSeparator />

  <MenuFlyoutItem Text="{i18nExt:Localize Key=RemoveFollow}"
                  CommandParameter="{Binding}"
                  x:Name="RemoveFollowButton" />
</MenuFlyout>
